{
  "name": "html-forge",
  "private": true,
  "version": "0.1.1",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron electron/main.js\"",
    "build": "vite build",
    "start": "electron electron/main.js",
    "pack": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "cz.jakublipar.htmlforge",
    "files": [
      "dist",
      "electron",
      "project-structure"
    ],
    "asarUnpack": [
      "project-structure/**"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "connect-livereload": "^0.6.1",
    "express": "^5.1.0",
    "livereload": "^0.9.3",
    "parse-html-comments": "^1.3.1",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@iconify/react": "^6.0.0",
    "@tailwindcss/vite": "^4.1.10",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "concurrently": "^9.1.2",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "path": "^0.12.7",
    "tailwindcss": "^4.1.10",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  }
}
